# React App Environment Variables
# SmartAir City - Frontend Configuration Template
# 
# INSTRUCTIONS:
# 1. Copy this file to .env.development or .env.production
# 2. Update values for your environment
# 3. NEVER commit .env file (contains real secrets)

# ============================================
# AIR QUALITY API (Port 51761 - HTTPS)
# ============================================
REACT_APP_AIR_API_URL=http://localhost:51761
REACT_APP_AIR_WS_URL=http://localhost:51761

# ============================================
# CORE API - Devices, Users & Auth (Port 5252)
# ============================================
REACT_APP_CORE_API_URL=http://localhost:5252

# ============================================
# GENERAL SETTINGS
# ============================================
REACT_APP_ENV=development
REACT_APP_AUTO_REFRESH_INTERVAL=30000
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_API_TIMEOUT=10000

# ============================================
# FEATURE FLAGS
# ============================================
REACT_APP_ENABLE_WEBSOCKET=true
REACT_APP_ENABLE_AUTH=false
REACT_APP_DEBUG_MODE=true

# ============================================
# MAP CONFIGURATION (Optional - for future)
# ============================================
REACT_APP_MAP_CENTER_LAT=21.0285
REACT_APP_MAP_CENTER_LNG=105.8542
REACT_APP_MAP_DEFAULT_ZOOM=12

# ============================================
# SECRETS (Add to .env file ONLY - not tracked by git)
# ============================================
# REACT_APP_API_KEY=your_real_api_key_here
# REACT_APP_JWT_SECRET=your_jwt_secret_here
